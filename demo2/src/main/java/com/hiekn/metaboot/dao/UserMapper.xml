<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hiekn.metaboot.dao.UserMapper">
  
    <select id="getUserList" resultType="userBean">
        SELECT * FROM user
        <if test="pageNo != null and pageSize != null">
            LIMIT #{pageNo},#{pageSize}
        </if>
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM user
    </select>

    <select id="selectById" resultType="userBean">
        SELECT * FROM user WHERE id=#{id}
    </select>
    <select id="selectByUsername" resultType="userBean">
        SELECT * FROM user WHERE username=#{username}
    </select>

    <insert id="insert" parameterType="userBean" keyProperty="id" useGeneratedKeys="true">
          insert into user (username,email,password,addTime) values(
          #{username,jdbcType=VARCHAR},
          #{email,jdbcType=VARCHAR},
          #{password,jdbcType=VARCHAR},
          now()
          )
    </insert>
	
</mapper>